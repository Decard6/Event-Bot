        <property name="hibernate.connection.url">jdbc:mysql://localhost/event_bot?useTimezone=true&amp;serverTimezone=Europe/Warsaw</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">lubieplacki</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
